<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" >

	<bean id="forms-unittree.formPanelInitializer.panelResponseForms.queryPart.factory" class="fr.paris.lutece.plugins.forms.modules.unittree.business.form.panel.initializer.querypart.factory.impl.UnittreeFormPanelFormResponseInitializerQueryPartFactory"/>
	<bean id="forms-unittree.formPanelInitializer.panelResponseForms.display.factory" class="fr.paris.lutece.plugins.forms.modules.unittree.web.form.panel.display.initializer.factory.impl.UnittreeFormPanelFormsDisplayInitializerFactory"/>
	<bean id="forms-unittree.formPanelInitializer.panelResponseForms.subunit.queryPart.factory" class="fr.paris.lutece.plugins.forms.modules.unittree.business.form.panel.initializer.querypart.factory.impl.SubunitFormPanelFormResponseInitializerQueryPartFactory"/>
	<bean id="forms-unittree.formPanelInitializer.panelResponseForms.subunit.display.factory" class="fr.paris.lutece.plugins.forms.modules.unittree.web.form.panel.display.initializer.factory.impl.SubunitFormPanelFormsDisplayInitializerFactory"/>

	<!-- Panels Configurations -->
	<bean id="forms-unittree.formsUnittreePanel.panelConfiguration" class="fr.paris.lutece.plugins.forms.business.form.panel.configuration.FormPanelConfiguration">
		<constructor-arg name="strTechnicalCode" type="java.lang.String" value="forms-unittree"/>
		<constructor-arg name="nPosition" type="int" value="2"/>
		<constructor-arg name="strTitle" type="java.lang.String" value="module.forms.unittree.formsUnittreePanel.panelConfiguration.title"/>
		<constructor-arg name="listFormPanelInitializerName">
			<list>
				<value type="java.lang.String">fr.paris.lutece.plugins.forms.modules.unittree.business.form.panel.initializer.impl.UnittreeFormPanelInitializer</value>
			</list>
		</constructor-arg>
	</bean>
	<bean id="forms-unittree.formsUnittreePanel.subunit.panelConfiguration" class="fr.paris.lutece.plugins.forms.business.form.panel.configuration.FormPanelConfiguration">
		<constructor-arg name="strTechnicalCode" type="java.lang.String" value="forms-unittree-subunit"/>
		<constructor-arg name="nPosition" type="int" value="3"/>
		<constructor-arg name="strTitle" type="java.lang.String" value="module.forms.unittree.formsUnittreePanel.subunit.panelConfiguration.title"/>
		<constructor-arg name="listFormPanelInitializerName">
			<list>
				<value type="java.lang.String">fr.paris.lutece.plugins.forms.modules.unittree.business.form.panel.initializer.impl.SubunitFormPanelInitializer</value>
			</list>
		</constructor-arg>
	</bean>
    
    <!-- Service -->
    <bean id="forms-unittree.unitSelectionConfigService" class="fr.paris.lutece.plugins.forms.modules.unittree.service.impl.UnitSelectionConfigService" />
    
    <!-- Dao -->
    <bean id="forms-unittree.unitSelectionConfigValueDao" class="fr.paris.lutece.plugins.forms.modules.unittree.business.selection.UnitSelectionConfigValueDao" />
    <bean id="forms-unittree.unitSelectionConfigDao" class="fr.paris.lutece.plugins.forms.modules.unittree.business.selection.UnitSelectionConfigDao" />
    
    <bean id="forms-unittree.formsParametrableUnitSelection" class="fr.paris.lutece.plugins.forms.modules.unittree.service.FormsParametrableUnitSelection" />
    <bean id="forms-unittree.formsParametrableConfigurationHandler" class="fr.paris.lutece.plugins.forms.modules.unittree.service.impl.FormsParametrableConfigurationHandler" />
</beans>
